#for
	padding: 70px 0
	background-color: rgb(0,0,0,)
	background-image  url(../img/for_img.png), url(../img/for_bg.jpg)
	background-repeat no-repeat, no-repeat
	background-position: center bottom -150px, center bottom
	.container
		overflow hidden
.for_wrapper
	position relative
	z-index 15
	&:before
		content: ''
		position: absolute
		z-index -1
		width 100%
		height 200%
		top 0
.for_wrapper_left
	padding 40px 14px 10px
	&:before
		border-top: 5px solid rgb(234,194,147)
		border-left: 4px solid rgb(234,194,147)
		left 0
.for_wrapper_right
	padding 40px 14px 10px 76px
	&:before
		border-top: 5px solid rgb(234,194,147)
		border-right: 4px solid rgb(234,194,147)
		left 0
.for_wrapper_list
	margin-left: 24px
	li
		list-style-position: inset
		font-size: 25px;
		font-family: "YanoneKaffeesatzBold", sans-serif;
		color: rgb(255, 255, 255);
		line-height: 1.12;
		margin-bottom: 10px
		&:last-child
			margin-bottom: 0
		span
			font-size: 18px
		font-family: "YanoneKaffeesatz", sans-serif;
.button_for
	margin-top: 70px
	position relative
	z-index 99