#revs
	padding 0 0 140px
	background-color #fff
	background-image url(../img/revs_bg.jpg)
	background-repeat no-repeat
	background-position: center bottom 70px
#text_revs
	width 100%
	max-width 850px
	margin 0 auto
	border-radius: 10px;
	background-color: rgb(255, 255, 255);
	overflow hidden
	padding 20px
	box-shadow: 0px 3px 16.92px 1.08px rgba(0, 0, 0, 0.41);
.rev_img
	display block
	width 100%
	// object-fit: contain
	// height 300px !important
	// object-position: center
.carousel-indicators
	position: static
	margin 20px auto 0
	li
		height 12px
		width: 12px
		background-color: rgb(234,194,147)
		margin 0 4px
		transition: all .3s ease
		border: 1px solid rgb(255,255,255)
	.active
		background-color: rgb(234,194,147)
		margin 0 4px
		border: 1px solid rgb(0,0,0)
		width 12px
		height 12px
.controls
	width 96%
	top auto
	bottom: 10px
	left 0
	right 0
	margin 0 auto
	position: absolute
	overflow hidden
	height 40px
.carousel-control
	width: 40px
	height 40px
	font-size: 20px
	line-height: 40px
	color #fff
	font-family: 'YanoneKaffeesatzBold', sans-serif
	border-radius: 50px
	background-color: rgb(234,194,147)
	opacity 1
	position: static
.carousel-control.left
	background-image: none
	float left
.carousel-control.right
	background-image: none
	float: right
