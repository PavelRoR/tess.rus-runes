@media screen and (min-width 1900px)
	#for
	#get
		background-size: cover, cover
@media screen and (min-width 2295px)
	body
	.for_wrapper_list li span
		font-size: 20px
	.contacts
		line-height: 18px
	.container
		width 1400px
	footer p
		font-size: 16px
@media screen and (max-width 1199px)
	#logo
		height 14px
		width auto
	.contacts
		line-height: 14px
	.contact
		font-size: 14px
		padding-left: 19px
		margin-left: 10px
	.contact_mail
		padding-left: 22px
	.pre
		font-size: 18px
	#main .container::before
		right -300px
	.main_title
		margin 0 0 5px
		font-size: 48px
	.iframe_shadow
		left: 0;
		bottom: -155px;
		right: 0;
		margin: 0 auto;
		width: 100%;
	.get_img
		height 106px
		margin 0 auto 5px
	.get_text
		min-height 224px
	.certs_runes
		width 100%
		margin-top: calc(50% + 43px)
@media screen and (max-width 991px)
	header
		padding 11px 0
	#logo
		float: none
		display block
		margin 0 auto
	.contacts
		float: none
		text-align: center
	.contact
		margin 5px 5px 0
	#main
		padding 30px 0 40px
		background-position:  left 32.5% center
	#main .container::before
		left 0
		right 0
		margin 0 auto
		bottom: -100px
	.main_title
		line-height: 45px
	.main_text:last-of-type
		margin-top: 5px
	.main_video_wrapper
		margin-top: 15px
	.main_subtitle
		margin-top: 20px
		text-align: center
		line-height: 1.3
	.main_form_wrapper
		margin-top: 20px
	.general_title
		line-height: 1.3
		margin-bottom: 30px
	#for
		padding 40px 0
		background-image url("../img/for_img.png")
		background-repeat no-repeat
		background-position: center bottom -150px
	.for_wrapper_right
		padding 40px 14px 10px
	#plan
		padding 40px 0
		background-size: cover
	.day_container
		padding 20px 300px 20px 20px
	.day_container_1
		background-position: center right 55px, center right -245px
	.day_container_2
		background-position: center right 55px, center right -245px
	.day_container_3
		background-position: center right 55px, center right -245px
	#get
		padding 40px 0 0
	.get
		padding 20px
		min-height 410px
		margin 0 auto 40px
	.get_text
		height 252px
	.button_get
		margin-top: 340px
	#author
	#certs
		padding 40px 0
	.author_img
		top -20px
		left -130px
	.cert
		height 260px
	.certs_runes
		margin-top: 47%
	#revs
		padding 0 0 110px
		background-position center bottom 40px
	#last
		padding 40px 0 70px
	footer p br
		display: none
@media screen and (max-width 767px)
	#main
		background-image: none
		text-align: center
	#main .container::before
		content: none
	.iframe_shadow
		display: none
	.for_wrapper_left
		padding 20px 20px 10px
	.for_wrapper_right
		padding 0 20px 10px
	.for_wrapper_right::before
		border-top: 0
		border-right: 0
		border-left: 4px solid #eac293
	.day_container
		padding 140px 20px 20px
	.day_container
		background-position: top 20px center, center top -330px
		background-size: 80px, contain
	.day_list
		max-width 100%
	#get
		padding 40px 0
	.get
		height auto
		min-height 1px
		margin-bottom: 15px
	.get_text
		min-height 1px
		height auto
		display block
	.button_get_1
	.certs_runes
		display: none
	.button_get_2
		display block
		margin-top: 30px
	#author
		background-position: center right
	.author_container
		position: static
	.author_img
		position: static
		width 220px
		height 358px
		margin-bottom: 25px
		background-size: contain
	.author_info
		padding 0 0 20px 20px
		border-top: none
		border-bottom: 5px solid #0056c2;
	.author_info_text
		margin-bottom: 20px
@media screen and (max-width 560px)
	.email
		float: none
		display block
		margin 0 auto 10px
		width 100%
		max-width 320px
	.button_mail
		float: none
		width 100%
		max-width 320px
