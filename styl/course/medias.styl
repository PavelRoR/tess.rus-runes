@media screen and (min-width 1900px)
	#for
	#get
		background-size: cover, cover
@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.contacts
		line-height: 18px
	.general_title
		font-size: 34px
	.get_list
		max-width 1000px
	.get_list li
	.lessons_buttons li
	footer h5
		font-size: 22px
	.days, .lessons
		max-width 860px
	.lesson
		min-height 422px
	.video_wrapper_videos
		max-width 650px
	footer p
		font-size: 16px
@media screen and (max-width 1199px)
	#logo
		height 14px
		width auto
	.contacts
		line-height: 14px
	.contact
		font-size: 14px
		padding-left: 19px
		margin-left: 10px
	.contact_mail
		padding-left: 22px
@media screen and (max-width 991px)
	header
		padding 11px 0
	#logo
		float: none
		display block
		margin 0 auto
	.contacts
		float: none
		text-align: center
	.contact
		margin 5px 5px 0
	#main
		padding 40px 0
		background-position: center bottom -130px, center top -210px
	#for, #get
	#prices
	#plan
	#tasks
		padding 40px 0
	.general_title
		margin-bottom: 30px
	.lesson
		min-height 421px
	.timer_title
		margin-top: 0
	.flip-clock-wrapper
		width 100%
		max-width 260px
		margin-top: 30px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	footer p br
		display: none
@media screen and (max-width 767px)
	.lesson
		min-height 1px
	.timer_title
		margin-top: 30px
	.general_title_recs
		margin-bottom: 10px
	.buy_recs_button
		margin-top: 0
	.garants
		margin-top: 40px
	#vk
		margin-bottom: 25px
@media screen and (max-width 485px)
	.general_title
		font-size: 26px
		line-height: 1.3
	#logo
		height 10px
	.contacts
		line-height: 12px
	.contact
		font-size: 12px
		padding-left: 16px
	.contact_mail
		padding-left: 18px
	#main
		padding 30px 0
		background-position: center bottom -140px, center top -220px
	#for, #get
	#prices
	#plan
	#tasks
		padding 30px 0
	.pre
	.get_list li
		font-size: 18px
	.main_title
		font-size: 36px
		margin 5px 0 15px
		line-height: 38px
	.main_text:last-of-type
		margin 5px 0 30px
	.get_list
		padding 15px 15px 15px 30px
		margin 0 auto 30px
	.lesson
	.packet
	.day
		padding 15px
	.day_title, .lesson_title
		margin-bottom: 10px
	.timer_title
		margin-top: 20px
	.feedback_general_title
		margin-top: 50px
	.soc_buttons a
		margin 10px 5px
	footer
		padding 15px 0
		p
		a
			font-size: 12px
	.alert-danger
		margin-top: 30px
@media screen and (max-width 380px)
	.main_title
		font-size: 32px
	.lessons_buttons li
		font-size: 16px
		padding: 5px 7px
	.lesson_inner_list, .lesson_list
		margin-left: 15px
	.general_title
		font-size: 24px