#plan
	padding 50px 0
	background-color #fff
	background-image url(../img/plan_bg.jpg)
	background-repeat no-repeat
	background-position: center top 150px
	background-size contain
.lessons
.days
	width 100%
	max-width 650px
	margin 0 auto
	position relative
.lessons_container
	border-radius: 10px
	box-shadow: 0 3px 18px 3px rgba(0,0,0,.51)
	background-color #fff
	z-index 9
.lesson_back_1
.lesson_back_2
	position: absolute	
	background-color #fff
	height 30px
	border-radius: 10px;
	box-shadow: 0px 3px 17.1px 0.9px rgba(0, 0, 0, 0.51);
	margin 0 auto
	left 0
	right 0
.lesson_back_1
	width 90%
	z-index -3
	bottom: -8px
.lesson_back_2
	width 84%
	z-index -5
	bottom: -16px
.lessons_buttons
	text-align: center
	margin-bottom: 15px
	li
		display: inline-block
		margin 5px
		border: 1px solid #000
		padding 5px 10px
		border-radius: 10px
		cursor pointer
		background-color #fff
		transition: all .3s ease
		&:hover
		&.active
		&.active2
			background-color: #dfc194
			color #fff
			box-shadow: 0 3px 8px 3px rgba(0,0,0,.1)
			transform: translateY(-2px)
.lesson
	padding 20px
	min-height 420px
.lesson_title
.day_title
	text-align: center
	font-size: 22px
	font-family: "YanoneKaffeesatzBold", sans-serif;
	margin-bottom: 15px
.lesson_list
.lesson_inner_list 
	margin-left: 20px
.lesson_list
	li
		span
			font-family: "YanoneKaffeesatzBold", sans-serif;
