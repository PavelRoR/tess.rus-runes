#prices
	padding 50px 0
	background-color: rgb(4,4,7)
	background-image url(../img/last_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
.packet
	width 100%
	max-width 320px
	margin 0 auto 20px
	background-color: #fff;
	border-radius: 10px;
	box-shadow: 0 0 5px 2px rgba(0, 0, 0, .25);
	border: 2px solid #eac293;
	padding 20px
.packet_body_list
	margin: 0 0 20px 20px
	li
		font-size: 20px
.cost
	font-size: 22px
	margin-bottom: 20px
	text-align: center
	span
		font-family: 'YanoneKaffeesatzBold', sans-serif
		display block
		font-size: 28px
.cost_full
	span
		text-decoration: line-through
.cost_sale
	color red
.cost_today
	color green
.prepayment
	width 100%
	max-width 650px
	margin 0 auto
	text-align: center
.prepaymant_title
	font-size: 32px
	font-family: "YanoneKaffeesatzBold", sans-serif
	color red
.prepayment_text
	font-size:   20px
	color #fff
	margin 15px 0 35px
.timer_title
	font-size: 32px
	text-align: center
	color #ffffff
	margin: 30px 0 20px
	font-family: "YanoneKaffeesatzBold",sans-serif
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 40px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #0056c2
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #0056c2
	text-shadow: 2px 2px 2px rgba(#022a37,.6);
.garants
	width 100%
	max-width 650px
	margin 60px auto 0
	background-color: rgba(255,255,255,.9)
	border-radius: 5px
	border: 1px dashed #000
	box-shadow 0 3px 15px 0 rgba(0,0,0,0.4)
	text-align: center
	padding 20px
	color #000
.garants_title
	font-size: 18px
	margin-bottom: 5px
	font-family: "YanoneKaffeesatzBold", sans-serif
.garants_text
	font-size: 16px
.general_title_recs
	color #ffffff
	margin 30px 0 20px
	line-height: 1.3
.buy_recs_text
	color #ffffff
	text-align: center
	font-size: 22px
.buy_recs_button
	margin 15px auto 0