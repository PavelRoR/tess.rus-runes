@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	footer p
		font-size: 16px
	#main.remind
		min-height calc(100vh - 237px)
@media screen and (max-width 1199px)
	#logo
		height 14px
		width auto
	.contacts
		line-height: 14px
	.contact
		font-size: 14px
		padding-left: 19px
		margin-left: 10px
	.contact_mail
		padding-left: 22px
@media screen and (max-width 991px)
	header
		padding 11px 0
	#logo
		float: none
		display block
		margin 0 auto
	.contacts
		float: none
		text-align: center
	.contact
		margin 5px 5px 0
	#main
		padding 30px 0 40px
	.general_title
		line-height: 1.3
		margin-bottom: 30px
	footer p br
		display: none
@media screen and (max-width 767px)
	#vk
		margin-bottom: 25px
@media screen and (max-width 485px)
	body
		line-height: 1.3
	#logo
		height 10px
	.contacts
		line-height: 12px
	.contact
		font-size: 12px
		padding-left: 16px
	.contact_mail
		padding-left: 18px
	#main
	#feedback
		padding 30px 0
	.main_title
		font-size: 28px
		margin 10px 0 15px
	.main_subtitle
		font-size: 22px
	.general_title
		font-size: 24px
	footer p
		font-size: 12px
	.soc_buttons a
		margin 7px 5px 10px
@media screen and (max-width 380px)
	.main_title
		font-size: 24px
		margin 5px 0 10px
	.main_subtitle
		font-size: 20px
	.general_title
		font-size: 22px
	footer
		padding 15px 0
		h5
			font-size: 18px