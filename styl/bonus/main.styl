#main
	padding 30px 0 70px
	background-color: rgb(4,4,7)
	background-image url(../img/last_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	text-align: center
	color #fff
	overflow hidden
.main_title
	font-size: 36px
	font-family: "YanoneKaffeesatzBold", sans-serif;
	margin 10px 0 20px
.main_subtitle
	font-size: 28px
	font-family: "YanoneKaffeesatzBold", sans-serif;
.main_video_wrapper
	max-width 560px
	margin 20px auto 0
	box-shadow: 0 0 18px 12px rgba(255,255,255,.15)
.iframe_shadow
	position: absolute
	width 444px
	height 218px
	background-image url(../img/video_shadow.png)
	background-repeat no-repeat
	left 80px
	bottom: -155px